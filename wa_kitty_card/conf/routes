# user mode
GET     /                               controllers.UiController.index()
GET     /combinedView                   controllers.UiController.combinedView()
GET     /enterNames                     controllers.UiController.enterNames()
POST    /setPlayerNames                 controllers.UiController.setPlayerNames()
GET     /newGame                        controllers.UiController.newGame()
GET     /gameOverPage                   controllers.UiController.gameOverPage()
GET     /gameOver                       controllers.UiController.gameOver()
POST    /placeCard                      controllers.UiController.placeCard()
POST    /draw                           controllers.UiController.drawCard()
POST    /undo                           controllers.UiController.undo()
POST    /redo                           controllers.UiController.redo()

# kernel mode
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
GET     /listEvents                     controllers.UiController.listEvents()
GET     /playersState                   controllers.UiController.playersState()
GET     /gridColors                     controllers.UiController.gridColors()
GET     /loadingScreen                  controllers.UiController.loadingScreen()
GET     /playersHand                    controllers.UiController.playerHandView()